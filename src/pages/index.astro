<style>
  .parent {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(10, 1fr);
    margin-top: 3rem;
   }

   #hero_card-info p {
      color: var(--icons);
   }

   span:first-child {
      padding-right: 20px;
   }

   svg path {
      fill: var(--icons);
      transition: fill 0.3s ease;
      cursor: pointer;
   }

   #hero_img path {
      fill: var(--hero);
      stroke: var(--text-primary);
      stroke-width: 1px;
      filter: drop-shadow(3px 3px var(--border)) drop-shadow(-3px -3px var(--icons));
      fill-opacity: 0;
      stroke-dasharray: 1300;
      stroke-dashoffset: 1300;
      animation: dash 4s ease-in forwards;
      cursor: crosshair;
   }

   @keyframes dash {
      70% {
         fill-opacity: 0;
      }
      100% {
         fill-opacity: 100%;
         stroke-dashoffset: 0;
         stroke-width: 1;
      }
   }

   #hero_img-plant {
      background: none;
      position: absolute;
      transform: translate(-145%, -65%);
   }

   #hero_img-plant-mirror {
      background: none;
      position: absolute;
      transform: translate(145%, -65%) scaleX(-1);
   }

   .parent > div {
      border: 2px solid var(--text-primary);
      text-align: center;
      padding: 12px;
      min-width: 500px;
   }

   .div5, .div6, .div7 {
      display: flex;
      justify-content: center;
      align-items: center;
      text-transform: uppercase;
      width: 100%;
      height: 100px;
      position: relative;
      overflow: hidden;
   }

   button {
      width: 100%;
      height: 100%;
      position: relative;
      font-size: 16px;
      color: var(--text-primary);
      cursor: pointer;
      z-index: 2;
   }

/* DIVS - GRID */

.div1 {
    grid-column: span 2 / span 2;
    grid-row: span 5 / span 5;
}

.div2 {
    border: none !important;
    grid-column: span 2 / span 2;
    grid-row: span 2 / span 2;
    grid-column-start: 3;
}

.div3 {
    grid-column: span 2 / span 2;
    grid-row: span 2 / span 2;
    grid-column-start: 3;
    grid-row-start: 4;
}

.div4 {
    grid-column: span 2 / span 2;
    grid-column-start: 3;
    grid-row-start: 3;
}

.div5 {
    grid-column: span 2 / span 2;
    grid-row-start: 6;
}

.div6 {
    grid-column: span 2 / span 2;
    grid-column-start: 1;
    grid-row-start: 7;
}

.div7 {
    grid-column: span 2 / span 2;
    grid-column-start: 1;
    grid-row-start: 8;
}

.div8 {
    grid-column: span 2 / span 2;
    grid-row: span 3 / span 3;
    grid-column-start: 3;
    grid-row-start: 6;
}

.div9 {
    grid-column: span 4 / span 4;
    grid-row: span 2 / span 2;
    grid-row-start: 9;
    width: 100%;
}

/* MEDIA QUERIES */
@media (max-width: 1300px) {
   #landing-page {
      width: 100%;
      overflow-x: hidden;
   }

   #contact-a_img {
      display: none;
   }

   .div8 > h3 > a  > br {
      display: none;
   }
   
   .parent {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      gap: 1rem;
      place-items: center;
      margin-top: 0;
      scale: 1;
      transform: none;
   }

   .parent > div {
      width: 90%;
      margin: 0;
      height: auto;
      min-width: unset;
      grid-column: 1 / -1 !important; 
      grid-row: auto !important; 
   }

   .div2 {
      order: -1;
   }

   .div2, .div3, .div4 {
      display: flex;
      justify-content: space-between;
      align-items: center;
      text-align: center;
   }

   .div4 > div {
      display: flex;
      justify-content: space-between;
      align-items: center;
      text-align: center;
      width: 100%;
   }

   .div4 > div > p {
      font-size: 0.7rem;
      color: var(--icons);
   }

   #description_img {
      display: none;
   }

   #hero_img-plant {
      transform: translate(-130%, -65%);
      width: 40%;
   }

   #hero_img-plant-mirror {
      transform: translate(130%, -65%) scaleX(-1);
      width: 40%;
   }

   #hero_img {
      width: 100%;
      height: auto;
   }

   .div1 > div {
      padding: 0;
      width: 100%;
   }

   .parent {
      min-height: auto;
   }

   .parent > div {
      margin-bottom: 0.5rem;
   }


}
</style>
